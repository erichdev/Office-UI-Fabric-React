{
  "extends": [
    "@microsoft/gulp-core-build-typescript/lib/defaultTslint.json"
  ],
  "rules": {
    "no-duplicate-variable": true,
    "use-isnan": true,
    "triple-equals": [
      true
    ],
    "max-line-length": [
      true,
      140
    ],
    "no-arg": true,
    "radix": true,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "member-variable-declaration"
    ],
    "no-unused-expression": [
      false
    ],
    "prefer-const": false,
    "quotemark": [
      true,
      "single",
      "jsx-single"
    ],
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-null-keyword": false,
    "export-name": false,
    "trailing-comma": [
      false
    ],
    "whitespace": [
      false
    ],
    "no-trailing-whitespace": false,
    "no-switch-case-fall-through": false,
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords"
    ]
  }
}